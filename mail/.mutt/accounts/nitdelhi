set from = "161210045@nitdelhi.ac.in"
set sendmail = "/usr/bin/msmtp -a nitdelhi"

# Set folders
set spoolfile	= "+nitdelhi/Inbox"
set mbox 		= "+nitdelhi/archive"
set postponed	= "+nitdelhi/drafts"
set record		= "+nitdelhi/sent"
set trash		= "+nitdelhi/trash"

# Alternate email addresses.
alternates ^kontakt@webgefrickel.de$ ^s.rademacker@mailbox.org$

# custom signaure
set signature = ~/.mutt/signatures/nitdelhi

color status cyan default

macro index o "<shell-escape>mbsync nitdelhi<enter>" "run mbsync to sync mail for this account"

macro index,pager J \
  "<enter-command>set my_old_resolve=\$resolve noresolve<enter>\
  <tag-prefix><clear-flag>n<enter-command>set resolve=\$my_old_resolve<enter>\
  <save-message>+nitdelhi/junk<enter>" \
  "mark as read and move to junk folder"

macro index,pager A \
  "<save-message>+nitdelhi/archive<enter>"  \
  "move message to the archive"

macro index,pager I \
  "<save-message>+nitdelhi/Inbox<enter>"  \
  "move message to the inbox"
