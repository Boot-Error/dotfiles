#!/usr/bin/zsh

alias vim="nvim"
alias e="vim"
alias z="zathura"
alias o="xdg-open"
alias g="git"

alias ls="ls --color=auto"
alias ll="ls -lh"
alias la="ls -lah"

alias grep="grep --color=auto"

alias cp="cp -rvf"
